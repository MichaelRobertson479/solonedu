<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6 m-auto">
      <div class="card card-body bg-light">
        <a class="text-center" href="/">
          <img src="/img/logo.png" width="150px" class="img-fluid" alt="solon logo">
        </a>
        <h1 class="text-center mb-3">Register</h1>
        <% include ./partials/messages %>
        <form action="/users/register" method="POST">
          <div class="form-group text-center">
            <input class="form-radio" type="radio" id="type" name="type" value="<%= "student" %>">
            <label class="radio-inline mr-3">Student</label>
            <input class="form-radio" type="radio" id="type" name="type" value="<%= "parent" %>">
            <label class="radio-inline mr-3">Parent</label>
          </div>
          <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Full Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="osis">OSIS (of student if you are a parent)</label>
            <input type="text" id="osis" name="osis" class="form-control" placeholder="Enter OSIS"
              value="<%= typeof osis != 'undefined' ? osis : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="publicaddress">Public Address</label>
            <p>(Don't have a public address? Make a Metamask account <a href="/users/mmsetup">here</a>)</p>
            <input type="text" id="publicaddress" name="publicaddress" class="form-control"
              placeholder="Enter Public Address"
              value="<%= typeof publicaddress != 'undefined' ? publicaddress : '' %>" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-outline-primary btn-block">Register</button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>

